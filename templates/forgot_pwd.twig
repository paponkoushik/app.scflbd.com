{% extends 'layouts/login_layout.twig' %}
{% block title %} SCFL | Forgot Password {% endblock %}
{% block content %}
    <form class="form-horizontal" action="/forgot-pwd/send-email" method="post">
        <div class="form-group ">
            <div class="col-xs-12">
                <h3>Recover Password</h3>
                <p class="text-muted">Enter your Email and instructions will be sent to you! </p>
            </div>
        </div>
        <div class="form-group ">
            <div class="col-xs-12">
                <input class="form-control" name="email_address" type="email" required="required" placeholder="Email">
            </div>
        </div>
        <div class="form-group text-center m-t-20">
            <div class="col-xs-12">
                <button class="btn btn-primary btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">
                    Send Email
                </button>
            </div>
        </div>
        <div class="form-group m-b-0">
            <div class="col-sm-12 text-center">
                <div>Want to go back? <a href="/" class="text-info m-l-5"><b>Click here</b></a></div>
            </div>
        </div>
    </form>
{% endblock %}